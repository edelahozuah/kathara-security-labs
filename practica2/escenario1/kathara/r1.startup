#!/bin/bash
# r1: Router con 2 interfaces
# Net0: 10.1.0.1/24, Net1: 10.1.1.1/24

# ConfiguraciÃ³n de interfaces
ip addr flush dev eth0
ip addr flush dev eth1
ip addr add 10.1.0.1/24 dev eth0
ip addr add 10.1.1.1/24 dev eth1
ip link set eth0 up
ip link set eth1 up

# Verificar forwarding IP
if [ "$(cat /proc/sys/net/ipv4/ip_forward)" != "1" ]; then
  echo "WARNING: net.ipv4.ip_forward no esta habilitado en r1" >&2
fi

# Ruta a red 10.1.2.0/24 via r2
ip route replace 10.1.2.0/24 via 10.1.1.2 dev eth1
